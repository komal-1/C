// Print the sum of First n natural numbers. where n = 4. Also, print them in reverse.

#include<stdio.h>
int main() {
int n;
printf("enter number : ");
scanf("%d", &n);

int sum = 0;
for(int i =1;i<=n;i++) {
sum = sum + i; // sum += i
}
printf("sum is %d",sum);

for(int i =n; i>=1; i--){
printf("%d\n",i);
}
return 0;
}

OR,

#include<stdio.h>
int main() {
    int n;
    printf("enter number :");
    scanf("%d",&n);
    int sum = 0;
    for(int i =1,j=n;i<=n && j>=1;i++,j--){
        sum = sum+i; // sum+=i
        printf("%d\n",j);
    }
    printf("sum is %d", sum);

    // for(int i = n;i>=1;i--){
    //     printf("%d\n", i);
    // }

    return 0;
}




